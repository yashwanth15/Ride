<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yashwanth.ride.PhoneActivity">

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:phoneNumber="true"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:padding="10dp"
        android:inputType="phone"
        android:hint="Phone No."/>

    <Button
        android:id="@+id/sendOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginTop="49dp"
        android:text="Send OTP"
        android:layout_alignLeft="@+id/phoneNumber"
        android:layout_alignStart="@+id/phoneNumber"
        android:layout_alignRight="@+id/phoneNumber"
        android:layout_alignEnd="@+id/phoneNumber"/>

    <ImageView
        android:id="@+id/mobileLogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/phoneNumber"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_phone_iphone_black_24dp"
        android:layout_toLeftOf="@+id/phoneNumber"
        android:layout_toStartOf="@+id/phoneNumber" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/OTPeditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41dp"
                android:ems="10"
                android:padding="10dp"
                android:inputType="phone"
                android:hint="OTP Here ..."/>

            <Button
                android:id="@+id/OTPVERIFY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/OTPeditText"
                android:layout_marginTop="49dp"
                android:text="Verify"
                android:visibility="gone"
                android:layout_alignLeft="@+id/OTPeditText"
                android:layout_alignStart="@+id/OTPeditText"
                android:layout_alignRight="@+id/OTPeditText"
                android:layout_alignEnd="@+id/OTPeditText" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
